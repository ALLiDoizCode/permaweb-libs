{
	"compilerOptions": {
		"module": "ES2015",
		"target": "ES6",
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"baseUrl": "src",
		"rootDir": "./src",
		"outDir": "./dist",
		"moduleResolution": "Bundler",
		"lib": ["dom", "dom.iterable", "esnext"],
		"paths": {
			"common/*": ["common/*"],
			"helpers/*": ["helpers/*"],
			"services/*": ["services/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
